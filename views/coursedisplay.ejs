<%- include('./header.ejs') %>

    <style>
        @media(max-width:995px) {
            td a {
                width: 75%;
            }

        }

        @media(max-width:995px) {
            td a {
                width: 100%;
            }

        }
    </style>
    <div class="container-fluid  w-100 bg-warning">
        <!-- course display -->
        <div class="row ">
            <h1 class="mt-3 mb-3 text-dark col-md-9 ms-2" style="font-size: 1.5rem;"><span
                    class="text-danger">&diams;</span> Course Enrollment
                submission display</h1>
        </div>

        <div class="container">
            <div class="row table-responsive-md">
                <table class="table table-borderless text-center table-hover table-sm ">

                    <tr class="" style="font-size: 0.9rem;">
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">DOB</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Address</th>
                        <th scope="col">Course</th>
                        <th scope="col">Status</th>
                        <th scope="col">Comment</th>
                        <th scope="col" class="bg-primary text-white">Actions</th>
                    </tr>

                   
                    <% d.forEach((Item)=>{ %>
                    <tr style="font-size: 0.8rem;">

                        <td>
                            <%= Item._id %>
                        </td>
                        <td>
                            <%= Item.name %>
                        </td>
                        <td>
                            <%= Item.email %>
                        </td>
                        <td>
                            <%= Item.phone %>
                        </td>
                        <td>
                            <%= Item.birth %>
                        </td>
                        <td>
                            <%= Item.gender %>
                        </td>
                        <td>
                            <%= Item.address %>
                        </td>
                        <td>
                            <%= Item.course %>
                        </td>
                        <td>
                            <%= Item.status %>
                        </td>
                        <td>
                            <%= Item.comment %>
                        </td>
                        <td>
                            <a href="/courseView/<%= Item._id %>" class="btn btn-primary"
                                style="font-size: 0.8rem;">View</a>
                            <a href="/courseEdit/<%= Item._id %>" class="btn btn-info " style="font-size: 0.8rem;">Edit</a>
                            <a href="/courseDelete/<%= Item._id %>" class="btn btn-danger  " style="font-size: 0.8rem;"
                                hidden>Delete</a>
                        </td>

                    </tr>
                    <% }) %>
                </table>
            </div>
        </div>

    </div>

    <%- include('./footer.ejs') %>