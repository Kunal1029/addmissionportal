<%- include('./header.ejs') %>
    
    <div class="container-fluid  w-100" style="background-color: #006690;">

        <div class="row ">
            <h1 class="mt-3 mb-3 text-warning col-md-9 ms-2" style="font-size: 1.5rem;"><span
                    class="text-danger">&diams;</span> Course Enrollment
                form EDIT</h1>
        </div>

        <div class="container">
            <div class="row table-responsive-md">
                <form class="a1 mt-4 mb-4 text-white"  action="/course_update/<%= d._id %>" method="post">

                    <div class=" w-75 ">
                       
                        <div
                            class="form-group form-outline   input-group mb-3 col-lg gform transi">
                            <label for="">Name : </label> &nbsp;&nbsp;
                            <input name="name"
                                class="form-control line bg-light p-2 text-dark bg-opacity-25  rounded  shadow-none"
                               value=" <%= d.name %>" placeholder="Username" type="text" required>
                        </div> <!-- form-name// -->
                    </div>

                    
                    <div
                        class="form-group w-75 input-group mb-3 col-lg gform transi">
                        <label for="">Email : </label> &nbsp;&nbsp;
                        <input name="email" value=" <%= d.email %>"
                            class="form-control form-control-sm line bg-light p-2 text-dark bg-opacity-25 shadow-none rounded"
                            placeholder="Email address" type="email" required>
                    </div> <!-- form-email// -->



                    <div
                        class="form-group w-75 input-group mb-3 col-lg gform transi">
                        <label for="">Phone : </label> &nbsp;&nbsp;
                        <input name="phone" value="<%= d.phone %>"
                            class="form-control form-control-sm line bg-light p-2 text-dark bg-opacity-25  rounded shadow-none"
                            placeholder="Enter Phone number " type="number"
                            required>
                    </div> <!-- form-number// -->


                    <div
                        class="form-group w-75 input-group mb-3 col-lg gform transi">
                        <label class="pt-1">DOB : </label>
                        &nbsp;&nbsp;&nbsp;
                        <input name="DOB" value="<%= d.birth %>"
                            class="form-control form-control-sm line bg-light p-2 text-dark bg-opacity-25  rounded shadow-none"
                            type="date" required>
                    </div> <!-- dob// -->

                    <div class="gender mb-3 w-75">

                        <label class="">Gender : </label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio"
                                name="Gender" value="<%= d.gender %>">
                            <label class="form-check-label">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio"
                                name="Gender" value="<%= d.gender %>">
                            <label class="form-check-label">Female</label>
                        </div>

                    </div><!-- gender// -->

                    <!-- <%= d.gender %> -->

                    <div class="form-group mb-3 w-75">
                        <label>Address : &nbsp;</label>
                        <textarea name="address"  value="<%= d.address %>"
                            class="form-control  form-control-sm line bg-light p-2 text-dark bg-opacity-25 shadow-none rounded"></textarea>
                    </div><!-- Address// -->


                    <div class="form-group mb-3 w-75">
                        <label>Course : &nbsp;</label>
                        <select name="program"
                            class="form-control  form-control-sm line bg-light p-2 text-dark bg-opacity-25 shadow-none rounded">
                            <option><%= d.course %></option>

                        </select>
                    </div><!-- Course// -->

                    <div class="text-center">
                        <button type="submit" class="btn btn-danger text-white "
                            data-bs-dismiss="modal"
                            aria-label="close">Update</button>
                    </div>
                </form>
            </div>
        </div>


    </div>

<%- include('./footer.ejs') %>