<%- include('./header.ejs') %>
    <style>
        @media(max-width:995px) {
            td a {
                width: 75%;
            }

        }

        @media(max-width:995px) {
            td a {
                width: 100%;
            }

        }

        .table tr th {
            color: rgb(248, 248, 0);
        }
    </style>
    <div class="container-fluid  w-100 bg-warning">
        
        <!-- enquiry display -->
        <div class="row ">
            <h1 class="mt-3 mb-3 text-dark col-md-9 ms-2" style="font-size: 1.5rem;"><span
                    class="text-danger">&diams;</span> Enquiry Form
                submission display</h1>
        </div>

        <div class="container">
            <div class="row table-responsive-md">
                <table class="table table-borderless text-center table-hover table-sm table-dark">

                    <tr class="" style="font-size: 0.9rem;">
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">City</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Education</th>
                        <th scope="col">Education</th>
                        <th scope="col" class="bg-primary text-white">Actions</th>
                    </tr>


                    <% ed.forEach((EnqData)=>{ %>
                        <!-- console.log(EnqData) -->
                        <tr style="font-size: 0.8rem;">
                            <td>
                                <%= EnqData._id %>
                            </td>
                            <td>
                                <%= EnqData.name %>
                            </td>
                            <td>
                                <%= EnqData.city %>
                            </td>
                            <td>
                                <%= EnqData.email %>
                            </td>
                            <td>
                                <%= EnqData.phone %>
                            </td>
                            <td>
                                <%= EnqData.education %>
                            </td>

                            <td>
                                <a href="" class="btn btn-primary" style="font-size: 0.8rem;">View</a>
                                <a href="" class="btn btn-info " style="font-size: 0.8rem;">Edit</a>
                                <a href="" class="btn btn-danger  " style="font-size: 0.8rem;">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                </table>
            </div>
        </div>
    </div>

    <%- include('./footer.ejs') %>