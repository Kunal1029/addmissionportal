<%- include('../header.ejs') %>

    <h2>Get All Course Data </h2>
    <style>
        @media(max-width:995px) {
            td a {
                width: 75%;
            }

        }

        @media(max-width:995px) {
            td a {
                width: 100%;
            }

        }
    </style>
    <div class="container-fluid  w-100 bg-warning">
        <!-- course display -->
        <div class="row ">
            <h1 class="mt-3 mb-3 text-dark col-md-9 ms-2" style="font-size: 1.5rem;"><span
                    class="text-danger">&diams;</span> Course Enrollment
                submission display</h1>
        </div>

        <div class="container">
            <div class="row table-responsive-md">
                <table class="table table-borderless text-center table-hover table-sm ">

                    <tr class="" style="font-size: 0.9rem;">
                        <th scope="col">S. No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Course</th>
                        <th scope="col">Status</th>
                        <th scope="col">Comment</th>
                        <th scope="col"></th>
                        <th scope="col" class="bg-primary text-white">Actions</th>
                    </tr>

                    <% i=1 %>
                        <% d.forEach((EnrollData)=>{ %>

                            <!-- console.log(EnrollData) -->
                            <tr style="font-size: 0.8rem;">

                                <td>
                                    <%= i++ %>
                                </td>
                                <td>
                                    <%= EnrollData.name %>
                                </td>

                                <td>
                                    <%= EnrollData.gender %>
                                </td>

                                <td>
                                    <%= EnrollData.course %>
                                </td>
                                <td>
                                    <%= EnrollData.status %>
                                </td>
                               
                                <td>
                                    <form action="/update_status/<%= EnrollData._id %>" method="post">
                                        <textarea name="comment"></textarea>
                                        <input type="hidden" name="name" value="<%= EnrollData.name %>">
                                        <input type="hidden" name="email" value="<%= EnrollData.email %>">

                                </td>

                                <td>
                                    <button type="submit" class="btn btn-success" name="status"
                                        value="Approved">Approved</button>
                                    <button type="submit" class="btn btn-danger" name="status"
                                        value="Reject">Reject</button>

                                    </form>
                                </td>

                                <td>
                                    <a href="/courseView/<%= EnrollData._id %>" class="btn btn-primary"
                                        style="font-size: 0.8rem;">View</a>
                                    <a href="/courseEdit/<%= EnrollData._id %>" class="btn btn-info "
                                        style="font-size: 0.8rem;">Edit</a>
                                    <a href="/courseDelete/<%= EnrollData._id %>" class="btn btn-danger  "
                                        style="font-size: 0.8rem;" hidden>Delete</a>
                                </td>

                            </tr>
                            <% }) %>
                </table>
            </div>
        </div>

    </div>


    <%- include('../footer.ejs') %>